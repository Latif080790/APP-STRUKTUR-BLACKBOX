# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=structural_analysis
DB_USER=postgres
DB_PASSWORD=structural_analysis_secure_password_2024

# JWT Configuration  
JWT_SECRET=structural-analysis-production-jwt-secret-2024-very-secure
JWT_EXPIRE=30d

# Application URLs
FRONTEND_URL=https://structural-analysis.com
BACKEND_URL=https://api.structural-analysis.com
FRONTEND_PORT=3000

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=structural-session-production-secret-2024

# File Upload Configuration
MAX_FILE_SIZE=500MB
UPLOAD_PATH=/app/uploads

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/production.log

# Monitoring Configuration
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@structural-analysis.com
SMTP_PASS=your-email-app-password